{
  "name": "sample-integration-angular",
  "version": "0.0.0",
  "scripts": {
    "postinstall": "rm -rf ./node_modules/@angular-builders/custom-webpack/node_modules",
    "ng": "ng",
    "start": "ng serve --host 0.0.0.0 --port 4200",
    "build": "ng build --configuration production --base-href /sample-integration-angular/",
    "test": "ng test",
    "test:ci": "CHROME_BIN=chromium ng test --browsers=ChromeHeadlessCI --watch=false",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "serve": "ng build --configuration production && serve -s dist/sample-integration-angular",
    "prettier": "prettier --write 'src/**/*.{ts,tsx}'"
  },
  "private": true,
  "prettier": "@porsche-design-system/prettier-config",
  "dependencies": {
    "@angular/animations": "17.1.1",
    "@angular/common": "17.1.1",
    "@angular/compiler": "17.1.1",
    "@angular/core": "17.1.1",
    "@angular/forms": "17.1.1",
    "@angular/platform-browser": "17.1.1",
    "@angular/platform-browser-dynamic": "17.1.1",
    "@angular/router": "17.1.1",
    "@porsche-design-system/components-angular": "3.11.0-rc.0",
    "@porsche-design-system/utilities": "5.4.1",
    "rxjs": "^7.8.1",
    "tslib": "^2.6.2",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "^17.0.0",
    "@angular-devkit/build-angular": "^17.1.1",
