    "codelyzer": "^6.0.2",
    "glob": "^10.3.10",
    "jasmine-core": "~5.1.1",
    "jasmine-spec-reporter": "~7.0.0",
    "karma": "~6.4.2",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "^2.1.0",
    "prettier": "^3.2.4",
    "protractor": "~7.0.0",
    "serve": "^14.2.1",
    "ts-node": "~10.9.2",
