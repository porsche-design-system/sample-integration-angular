{
  "name": "sample-integration-angular",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "prestart": "yarn replace",
    "start": "ng serve --host 0.0.0.0 --port 4200",
    "prebuild": "yarn replace",
    "build": "ng build --prod --base-href /sample-integration-angular/",
    "replace": "yarn replace:coreStyles && yarn replace:fontFaceCss && yarn replace:browserNotification && yarn replace:fontPreloading",
    "replace:coreStyles": "placeholder='<!--PLACEHOLDER_PORSCHE_DESIGN_SYSTEM_INITIAL_STYLES-->' && partial=$placeholder$(node -e 'console.log(require(\"@porsche-design-system/components-js/partials\").getInitialStyles())') && regex=$placeholder'.*' && sed -i '' -E -e \"s@$regex@$partial@\" src/index.html",
    "replace:fontFaceCss": "placeholder='<!--PLACEHOLDER_PORSCHE_DESIGN_SYSTEM_FONT_FACE_STYLESHEET-->' && partial=$placeholder$(node -e 'console.log(require(\"@porsche-design-system/components-js/partials\").getFontFaceStylesheet())') && regex=$placeholder'.*' && sed -i '' -E -e \"s@$regex@$partial@\" src/index.html",
    "replace:fontPreloading": "placeholder='<!--PLACEHOLDER_PORSCHE_DESIGN_SYSTEM_FONT_LATIN-->' && partial=$placeholder$(node -e 'console.log(require(\"@porsche-design-system/components-js/partials\").getFontLinks({ weight: [\"regular\", \"semi-bold\"] }))') && regex=$placeholder'.*' && sed -i '' -E -e \"s@$regex@$partial@\" src/index.html",
    "replace:browserNotification": "partial=$(node -e 'console.log(require(\"@porsche-design-system/browser-notification\").includeOverlay().replace(/(\\\\[bd\\/]|&)/g, \"\\\\$1\"))') && regex='<!--PLACEHOLDER_NOTIFICATION-->|<script>.*browser-notification.*<\\/script>' && sed -E -e \"s@$regex@$partial@\" src/index.html > src/index.tmp.html && yarn replace:renameIndexHtml",
    "replace:renameIndexHtml": "rm src/index.html && mv src/index.tmp.html src/index.html",
    "test": "ng test",
    "test:ci": "CHROME_BIN=chromium ng test --browsers=ChromeHeadlessCI --watch=false",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "serve": "ng build --prod && serve -s dist/sample-integration-angular",
    "prettier": "prettier --write 'src/**/*.{ts,tsx}'",
    "ngcc": "ngcc"
  },
  "private": true,
  "prettier": "@porsche-design-system/prettier-config",
  "dependencies": {
    "@angular/animations": "11.0.7",
    "@angular/common": "11.0.7",
    "@angular/compiler": "11.0.7",
    "@angular/core": "11.0.7",
    "@angular/forms": "11.0.7",
    "@angular/platform-browser": "11.0.7",
    "@angular/platform-browser-dynamic": "11.0.7",
    "@angular/router": "11.0.7",
    "@porsche-design-system/browser-notification": "^2.0.0",
    "@porsche-design-system/components-angular": "2.0.0-alpha.13",
    "@porsche-design-system/utilities": "4.0.0",
    "@porschehn/navigation": "^1.12.0",
    "rxjs": "~6.6.3",
    "tslib": "^2.0.3",
    "zone.js": "~0.11.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.1100.2",
    "@angular/cli": "11.0.6",
    "@angular/compiler-cli": "11.0.7",
    "@angular/language-service": "11.0.7",
    "@porsche-design-system/prettier-config": "^1.0.0",
    "@types/jasmine": "~3.6.2",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^14.14.9",
    "codelyzer": "^6.0.1",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~6.0.0",
    "karma": "~5.2.3",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.1",
    "karma-jasmine-html-reporter": "^1.5.0",
    "prettier": "^2.2.1",
    "protractor": "~7.0.0",
    "serve": "^11.3.1",
    "ts-node": "~9.1.1",
    "tslint": "~6.1.3",
    "typescript": "~4.0.5"
  }
}
